<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/drawer_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="navigation image"
        android:padding="@dimen/drawer_image_padding"/>
    
	<TextView
	    android:id="@+id/drawer_text"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1" 
	    android:gravity="center_vertical"
	    android:padding="@dimen/drawer_text_padding"
	    android:textSize="@dimen/drawer_text_size" />
</LinearLayout>
